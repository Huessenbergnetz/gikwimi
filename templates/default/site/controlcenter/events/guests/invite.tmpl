<div class="d-flex">
    <h1>{{ site_subtitle }} <small class="text-muted">{{ site_title }}</small></h1>
</div>

{% if invitation_subject %}
<div class="mb-3">
    <label for="inviteGuestSubject" class="form-label">{{ _("Subject") }}</label>
    <input id="inviteGuestSubject" class="form-control" type="text" value="{{ invitation_subject }}" aria-label="{{ _("invitation subject") }}" readonly>
</div>
{% endif %}

<div class="mb-3">
    <textarea id="inviteGuestText" class="form-control" rows="10" readonly>{{ invitation_text }}</textarea>
</div>

<form method="post">
    {% c_csrf_token %}
    <div class="d-flex justify-content-between">
        <a role="button" class="btn btn-outline-secondary" href="/controlcenter/events/{{ event.id }}/guests">{{ _("Cancel") }}</a>
        <button type="button" class="btn btn-outline-dark" id="copyInvitationToClipboard">{{ _("Copy to clipboard") }}</button>
        <button type="submit" class="btn btn-outline-primary">{{ _("Mark as invited") }}</button>
    </div>
</form>
